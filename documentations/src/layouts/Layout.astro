---
import Footer from "@components/footer.astro";
import "@fontsource-variable/bricolage-grotesque";
import "@fontsource-variable/inter/index.css";
import { SEO } from "astro-seo";

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "palm.dinusantara.id"
  : "palm.dinusantara - Future of Smart Palm Oil Business";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Reenie+Beanie&display=swap"
    />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="palm.dinusantara - Future of Smart Palm Oil Business."
    />
    <meta
      name="keywords"
      content="Indonesian food, traditional food, food classifications, food.dinusantara"
    />
    <meta name="author" content="sadewawicak25" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="canonical" href={canonicalURL} />

    <!-- <script async src="https://www.googletagmanager.com/gtag/js?id=G-Q6TEX4WZW3"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-Q6TEX4WZW3");
    </script> -->

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="palm.dinusantara - Future of Smart Palm Oil Business"
      canonical={canonicalURL}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `palm.dinusantara - Future of Smart Palm Oil Business`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "palm.dinusantara - Future of Smart Palm Oil Business",
        },
      }}
    />
  </head>
  <body>
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
